 	include_once("./json.php");
	$json = new JSON();

	include_once("../lib/lib.php");
	include_once("../db/SQL_Session.php");

	$mysqli = new SQL_Session();

	if(isset($_GET["min"])) {
		
		$Select = "id, DiaName";
		
	} else {
		
		$Select = "*";
		
	}

	$G_Parm = array('RouteListT_ID_' => NULL);
	if(CheckGetParameter($G_Parm)) {

		$BPrm = array(0=>$_GET["RouteListT_ID_"]);
	
		$result = $mysqli->BSelect("DiaGroupT", "RouteListT_ID_=?", "s", $BPrm);

		$json->PushResult($result);

	} else {

		$query = "select ".$Select." from DiaGroupT";

		$result = $mysqli->GetRecord($query);

		$json->PushResult($result);

	}

?>
